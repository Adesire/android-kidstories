<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.android_kidstories"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.project.android_kidstories.Utils.Common"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.project.android_kidstories.IgnoreForApiTest.TestActivity" />
        <activity
            android:name="com.project.android_kidstories.NightmodeActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.project.android_kidstories.Views.main.MainActivity"
            android:label="@string/title_activity_the_main"
            android:theme="@style/AppTheme.WhiteStatusBar" />
        <activity
            android:name="com.project.android_kidstories.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/DefaultTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.project.android_kidstories.StoryListingActivity" /> <!-- Do not edit this theme -->
        <activity android:name="com.project.android_kidstories.StoryDetailActivity" />
        <activity android:name="com.project.android_kidstories.SingleStoryActivity" />
        <activity
            android:name="com.project.android_kidstories.RegisterActivity"
            android:theme="@style/AppTheme.WhiteStatusBar" />
        <activity android:name="com.project.android_kidstories.ProfileRegisterActivity" />
        <activity android:name="com.project.android_kidstories.ProfileActivity" />
        <activity android:name="com.project.android_kidstories.OnBoardingActivity" />
        <activity
            android:name="com.project.android_kidstories.LoginActivity"
            android:theme="@style/AppTheme.WhiteStatusBar" />
        <activity android:name="com.project.android_kidstories.BookMark" />
        <activity android:name="com.project.android_kidstories.AddStoryActivity" />
        <activity android:name="com.project.android_kidstories.AddStoriesContentActivity" />
        <activity android:name="com.project.android_kidstories.Views.main.BaseActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.flutterwave.raveandroid.RavePayActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.flutterwave.raveandroid.VerificationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@style/com_facebook_activity_theme" />
        <activity android:name="com.facebook.CustomTabMainActivity" />
        <activity android:name="com.facebook.CustomTabActivity" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:exported="false" />

        <activity
            android:name="com.google.android.gms.auth.api.signin.internal.SignInHubActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <!--
            Service handling Google Sign-In user revocation. For apps that do not integrate with
            Google Sign-In, this service will never be started.
        -->
        <service
            android:name="com.google.android.gms.auth.api.signin.RevocationBoundService"
            android:exported="true"
            android:permission="com.google.android.gms.auth.api.signin.permission.REVOCATION_NOTIFICATION" />

        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <!--
         The initialization ContentProvider will call FacebookSdk.sdkInitialize automatically
         with the application context. This config is merged in with the host app's manifest,
         but there can only be one provider with the same authority activated at any given
         point; so if the end user has two or more different apps that use Facebook SDK, only the
         first one will be able to use the provider. To work around this problem, we use the
         following placeholder in the authority to identify each host application as if it was
         a completely different provider.
        -->
        <provider
            android:name="com.facebook.internal.FacebookInitProvider"
            android:authorities="com.project.android_kidstories.FacebookInitProvider"
            android:exported="false" />

        <receiver
            android:name="com.facebook.CurrentAccessTokenExpirationBroadcastReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.facebook.sdk.ACTION_CURRENT_ACCESS_TOKEN_CHANGED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.facebook.CampaignTrackingReceiver"
            android:exported="true"
            android:permission="android.permission.INSTALL_PACKAGES" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.project.android_kidstories.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />
        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="com.project.android_kidstories.com.squareup.picasso"
            android:exported="false" />
    </application>

</manifest>