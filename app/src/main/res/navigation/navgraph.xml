<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/home">
    <!--firstfragment-->
    <fragment
        android:id="@+id/home"
        android:name="com.project.android_kidstories.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">


        <action
            android:id="@+id/action_home_to_bookmarks"
            app:destination="@id/bookmarks" />
    </fragment>
    <!--second fragment-->
    <activity
        android:id="@+id/new_story"
        android:name="com.project.android_kidstories.AddStoryActivity"
        android:label="fragment_new"
        tools:layout="@layout/fragment_new_stories">
    </activity>

    <!--second fragment-->
    <fragment
        android:id="@+id/bookmarks"
        android:name="com.project.android_kidstories.ui.profile.BookmarksFragment"
        android:label="fragment_bookmarks"
        tools:layout="@layout/fragment_categories">
        <action
            android:id="@+id/action_bookmarks_to_home"
            app:destination="@id/home" />
    </fragment>
</navigation>